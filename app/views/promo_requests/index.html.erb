<p id="notice"><%= notice %></p>

<h1>Listing Promo Requests</h1>

<table>
  <thead>
    <tr>
      <th>Event name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Promo image uri</th>
      <th>Initiative</th>
      <th>Organization name</th>
      <th>Organizer email</th>
      <th>Is space reserved</th>
      <th>Event privacy</th>
      <th>Is free</th>
      <th>Registration url</th>
      <th>Press release uri</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promo_requests.each do |promo_request| %>
      <tr>
        <td><%= promo_request.event_name %></td>
        <td><%= promo_request.description %></td>
        <td><%= promo_request.location_id %></td>
        <td><%= promo_request.promo_image_uri %></td>
        <td><%= promo_request.initiative_id %></td>
        <td><%= promo_request.organization_name %></td>
        <td><%= promo_request.organizer_email %></td>
        <td><%= promo_request.is_space_reserved %></td>
        <td><%= promo_request.event_privacy %></td>
        <td><%= promo_request.is_free %></td>
        <td><%= promo_request.registration_url %></td>
        <td><%= promo_request.press_release_uri %></td>
        <td><%= link_to 'Show', promo_request %></td>
        <td><%= link_to 'Edit', edit_promo_request_path(promo_request) %></td>
        <td><%= link_to 'Destroy', promo_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

