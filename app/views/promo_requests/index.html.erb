<p id="notice"><%= notice %></p>

<h1>Listing Promo Requests</h1>

<table>
  <thead>
    <tr>
      <th>Event name</th>
      <th>Location</th>
      <th>Initiative</th>
      <th>Organizer Name</th>
      <th>Space Reserved?</th>
      <th>Event Privacy</th>
      <th>Event Free?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promo_requests.each do |promo_request| %>
      <tr>
        <td><%= promo_request.event_name %></td>
        <td><%= promo_request.gangplank_location.name %></td>
        <td><%= promo_request.gangplank_initiative.name %></td>
        <td><%= promo_request.organizer_name %></td>
        <td><%= promo_request.is_space_reserved %></td>
        <td><%= promo_request.event_privacy %></td>
        <td><%= promo_request.is_free %></td>
        <td><%= link_to 'Show', promo_request %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Promo request', new_promo_request_path %>
